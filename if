public class Main {

    public static void main(String[] args) {

     var numerolf = -2;

     if (numerolf > 0) {
         System.out.println( "El numero " + numerolf + " es positivo");
     } else if (numerolf == 0) {
         System.out.println("El numero es " + numerolf );

     } else {
         System.out.println("El numero " + numerolf + " es negativo");
     }

    }



}
